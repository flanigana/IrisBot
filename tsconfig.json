{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "outDir": "./lib",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "types": [
            "node",
            "jest",
            "reflect-metadata"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}